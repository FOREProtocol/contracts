{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "declaration": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictNullChecks": false,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["artifacts/*", "typechain/*"]
        }
    },
    "include": ["./scripts", "./test", "./typechain", "./deploy", "index.d.ts"],
    "files": ["./hardhat.config.ts"]
}
